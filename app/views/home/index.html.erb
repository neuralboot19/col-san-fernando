  <div class="news-updates">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="section-heading">
            <h2 class="text-black">Aula virtual</h2>
            <a href="https://sanfernando.academi-cloud.net/" target="_black">Iniciar sesión</a>
          </div>
          <div class="row">
            <% @classrooms.each do |c| %>
              <% if c.visible %>
                <div class="col-lg-6">
                  <div class="post-entry-big">
                    <%= link_to c.url_link, :class => "img-link", :target => "_blank" do %>
                      <img src="<%= c.image.url(:thumbnail)%>" alt="Image" class="img-fluid">
                    <% end %>
                    <div class="post-content">
                      <div class="post-meta"> 
                        <span class="mx-1"><%= c.descrition %></span>
                      </div>
                      <h3 class="post-heading">
                        <%= link_to c.url_link, :target => "_blank" do %>
                          <%= c.title %>
                        <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
              <% if c.position %>
                <div class="col-lg-6">
                  <div class="post-entry-big horizontal d-flex mb-4">
                    <%= link_to c.url_link, :class => "img-link mr-4", :target => "_blank" do %>
                      <img src="<%= c.image.url(:thumbnail)%>" alt="Image" class="img-fluid">
                    <% end %>
                    <div class="post-content">
                      <div class="post-meta">
                        <span class="mx-1"><%= c.descrition %></span>
                      </div>
                      <h3 class="post-heading">
                        <%= link_to c.url_link, :target => "_blank" do %>
                          <%= c.title %>
                        <% end %>
                      </h3>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
