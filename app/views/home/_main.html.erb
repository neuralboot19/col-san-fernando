<div class="hero-slide owl-carousel site-blocks-cover">
  <% @homes.each do |h| %>
    <% if h.visible %>
      <div class="intro-section" style="background-image: url(<%= h.image.url(:thumbnail) %>)">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-lg-12 mx-auto text-center" data-aos="fade-up">
              <h1><%= h.title %></h1>
              <h1><%= h.title_two %></h1>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>